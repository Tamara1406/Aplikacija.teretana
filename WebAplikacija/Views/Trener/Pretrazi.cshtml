@model PretraziTreneraViewModel

<div class="div1" >
    <label>Ime:</label>
    <br />
    <label>Prezime:</label>
    <br />
    <label>Obrazovanje:</label>
    <br />
    <label>Opis:</label>
    <br />
    <br />
    <br />
    <label>Grupe:</label>
    <br />
</div>
<div class="div2" >
    <input type="number" asp-for="TrenerID" hidden />
    <br />
    <input type="text" asp-for="Ime" readonly />
    <br />
    <input type="text" asp-for="Prezime" readonly />
    <br />
    <input type="text" asp-for="Obrazovanje" readonly />
